<section class="grocerylisterapp">
    <header class="header">
        <h1>Your Lists</h1>
      <%= form_for(@list) do |f| %>
    <% @list.errors[:name].any? %>
      <%= f.text_field :name, :class => "new-list", :placeholder => "create new list..." %>
     
      <%= f.submit :style => "display: none" %>
<div>
    <ul style="list-style: none;">
        <% @list.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
                 <% end %>
    </ul>
</div>
         <%  end %>
</form>
    </header>
    <section class="main">
        <input class="toggle-all" type ="checkbox">
        <label for="toggle-all">Mark all as complete</label>
        <ul class="item-list" style="list-style: none;">
            <% @lists.each do |display| %>
            <li>
                <div class="view">
                    <label><%= link_to display.name, list_path(display) %></label>
                </div>
            </li>
            <% end %>
        </ul>
    </section>
         <footer class="footer">
         </footer>
</section>

