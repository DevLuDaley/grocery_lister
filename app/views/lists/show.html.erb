<body class="learn-bar">
    <header class="header">
        <h1><%= @list.name%></h1>
    <%= form_for([@list, @item]) do |f| %>
    <%= f.text_field :description, :class => "new-item" %>
    <%= f.submit :style => "display: none" %>
    <%  end %>
    </header>
    <section class="grocerylisterapp">
        <ul class="item-list">
            <% @list.items.each do |item| %>
                <li>
                    <div class="view">
                            <label> <%= item.description %></label>
                        </div>
                        <% end %>
                </li>
            </ul>
    </section>
