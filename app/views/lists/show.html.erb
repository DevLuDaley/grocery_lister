<body class="learn-bar">
    <header class="header">
        <h1><%= @list.name%></h1>
    <%= form_for([@list, @item]) do |f| %>
    <% @item.errors[:description].any? %>
    <%= f.text_field :description, :class => "new-item", :placeholder => "add item..." %>
    <%= f.submit :style => "display: none" %>
<div>
    <ul>>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
            <% end %>
    </ul>
</div>
    <%  end %>
    </header>
    <section class="grocerylisterapp">
        <ul class="item-list">
            <% @list.items.each do |item| %>
                <li>
                    <div class="view">
                            <label> <%= item.description %></label>
                        </div>
                        <% end %>
                </li>
            </ul>
    </section>
